    "productivity"
  ],
  
  "shortcuts": [
    {
      "name": "Start Learning",
      "short_name": "Learn",
      "description": "Jump straight into sentence building",
      "url": "/learn",
      "icons": [
        {
          "src": "/assets/icons/learn-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Daily Challenge",
      "short_name": "Challenge",
      "description": "Complete today's challenge",
      "url": "/challenge",
      "icons": [
        {
          "src": "/assets/icons/challenge-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Progress",
      "short_name": "Progress",
      "description": "View your learning progress",
      "url": "/progress",
      "icons": [
        {
          "src": "/assets/icons/progress-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  
  "features": {
    "offline": true,
    "background_sync": true,
    "periodic_sync": true,
    "push_notifications": true,
    "content_indexing": true,
    "screen_wake_lock": true,
    "idle_detection": true,
    "file_handlers": [
      {
        "action": "/import",
        "accept": {
          "application/json": [".json"],
          "text/plain": [".txt"]
        }
      }
    ]
  },
  
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.sentencebuilder.pro",
      "id": "com.sentencebuilder.pro"
    },
    {
      "platform": "itunes",
      "url": "https://apps.apple.com/app/sentence-builder-pro/id123456789"
    }
  ],
  
  "prefer_related_applications": false,
  
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "handle_links": "preferred",
  
  "display_override": [
    "window-controls-overlay",
    "standalone",
    "minimal-ui",
    "browser"
  ],
  
  "protocol_handlers": [
    {
      "protocol": "web+sentencebuilder",
      "url": "/open?url=%s"
    }
  ],
  
  "iarc_rating_id": "e58c174a-81d2-5c3c-32cc-34b8de4a52e9",
  
  "permissions": [
    "notifications",
    "storage",
    "idle",
    "wake-lock"
  ],
  
  "optional_permissions": [
    "geolocation",
    "camera",
    "microphone"
  ]
}