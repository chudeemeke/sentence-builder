{
  "name": "sentence-builder",
  "version": "1.0.0",
  "description": "Interactive educational React component for teaching sentence construction",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:lib": "vite build --config vite.lib.config.js",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .js,.jsx",
    "lint:fix": "eslint src --ext .js,.jsx --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,json,css,md}\"",
    "analyze": "npm run build -- --analyze",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^18.2.0",
    "lucide-react": "^0.294.0",
    "zustand": "^4.4.7",
    "zundo": "^2.0.0",
    "immer": "^10.0.3",
    "framer-motion": "^10.16.5",
    "react-spring": "^9.7.3",
    "react-hot-toast": "^2.4.1",
    "openai": "^4.20.1",
    "idb": "^7.1.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.0.4",
    "vite": "^4.4.9",
    "vite-plugin-pwa": "^0.17.4",
    "eslint": "^8.50.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.0.3",
    "jest": "^29.7.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/jest-dom": "^6.1.3",
    "@testing-library/user-event": "^14.5.1",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "@storybook/react": "^7.5.0",
    "@storybook/react-vite": "^7.5.0"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0",
    "react-dom": "^16.8.0 || ^17.0.0 || ^18.0.0"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "keywords": [
    "react",
    "education",
    "sentence-builder",
    "learning",
    "grammar",
    "children",
    "interactive",
    "component"
  ],
  "author": "Chude <chude@emeke.org>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/chudeemeke/sentence-builder"
  },
  "bugs": {
    "url": "https://github.com/chudeemeke/sentence-builder/issues"
  },
  "homepage": "https://github.com/chudeemeke/sentence-builder#readme"
